<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
</head>
<body>




    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4" >
                Product Code
                <input type="text" id="txtProductCode" class="form-control" />
                File Type
                <input type="text" id="txtFileType" class="form-control" />
                Language Code
                <input type="text" id="txtLanguageCode" class="form-control" />
                <br /><br />
                <button class="btn btn-success" id="btnSearchFileVersion" style="marker-mid">Find File Version Record</button>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-sm-10">
                <table class='table table-responsive' id="fileVersioningTable">
                    <thead>
                        <tr>
                            <th>File Version ID</th>
                            <th>Group Code</th>
                            <th>SubGroup Code</th>
                            <th>Product Code</th>
                            <th>Purchase Path</th>
                            <th>Version Date</th>
                            <th>File Path</th>
                            <th>File Name</th>
                            <th>File Code</th>
                            <th>File Type</th>
                            <th>Domain Id</th>
                            <th>Language Code</th>
                            <th>Country Code</th>
                            <th>DELETE</th>
                            <th>EDIT</th>
                        </tr>
                    </thead>
                    <tbody id="fileVersioningTableBody"></tbody>
                </table>
            </div>
            <div class="col-sm-1"></div>
        </div>
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>

    <script>
        $(document).ready(function () {
            $("#btnSearchFileVersion").click(function () {
                var productCode = $("#txtProductCode").val();
                var fileType = $("#txtFileType").val();
                var languageCode = $("#txtLanguageCode").val();
                $.ajax({
                    type: "GET",
                    url: "/FileVersioning/GetFile",
                    data: {
                        ProductCode: productCode,
                        FileType: fileType,
                        LanguageCode: languageCode,
                    },
                    success: function (response) {
                        console.log("Data received:", response);
                        var tab = "";
                        for (var i = 0; i < response.length; i++) {
                            tab += "<tr>";
                            for (var property in response[i]) {
                                if (response[i].hasOwnProperty(property)) {
                                    tab += "<td>" + formatFieldValue(response[i][property]) + "</td>";
                                }
                            }
                            tab += "<td><span class='fa fa-trash spd' style='color:red;font-size:22px'></span></td>";
                            tab += "<td><span class='fa fa-edit spd' style='color:green;font-size:22px'></span></td>";
                            tab += "</tr>";
                        }
                        $('#fileVersioningTableBody').empty().append(tab);
                    },
                    error: function (xhr, textStatus, errorThrown) {
                        console.log("Error: " + errorThrown);
                        alert("Something went wrong");
                    }
                });
            });

            function formatFieldValue(value) {
                if (value instanceof Date && !isNaN(value)) {
                    return value.toLocaleDateString();
                } else {
                    return value !== undefined ? value.toString() : "undefined";
                }
            }
        });
    </script>

</body>
</html>
